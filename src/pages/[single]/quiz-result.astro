---
import Layout from '../../layouts/Layout.astro';
import data from '../../../db/visa'
import Related from '../../components/Related.astro';
import ADX from '../../components/ADX.astro';

const id = Astro.url.pathname.slice(1, Astro.url.pathname.lastIndexOf("/"))

const x = data.filter((x => x.route === id))[0]
const r = Astro.url.searchParams.get('r')! || '';
const t = x.questions.length
const result = +r / t
const filteredData = data.filter(q=> q.route != id)
---
<Layout title={x.title}, description={x.description} >
	<>
	<h1 style={{ marginTop: "0 !important" }} class=" text-lg font-medium md:text-3xl">
{  `Result: ${x.title}`
}      </h1>
        <ADX id="ad1"/>
        <p id="loading">Loading your results for {x.title}... </p>

        <div class="h-[100px] flex   text-primary  " id="loader" >
        <span class=" w-2 h-2 loader"></span>
        </div>    
        <div>
          {(result < 0.5) && <p class="hidden text-primary" id="result">{x.low}</p>}
          {(result > 0.5) && <p class="hidden text-primary" id="result">{x.high}</p>}
        </div>
        <ADX id="ad2"/>
        <Related filteredData={filteredData}/>
	</>
</Layout>
<script>
    const loading = document.querySelector("#loading")
    const loader = document.querySelector("#loader")
    const resultEl = document.querySelector("#result")

    setTimeout(function(){
      loading?.classList.add("hidden")
      loader?.classList.add("hidden")
      resultEl?.classList.remove("hidden")
    }, 10000)
</script>

<style>
.loader {
  width: 8px;
  height: 8px;
  margin: 40px auto;
  opacity: 0.5;
  border-radius: 50%;

  box-shadow:
    0 -14px 0 rgba(127, 17, 224, 1),
    10px -10px 0 rgba(127, 17, 224, .8),
    14px 0px 1px rgba(127, 17, 224, .7),
    10px 10px 1px rgba(127, 17, 224, .6),
    0px 14px 2px rgba(127, 17, 224, .5),
    -10px 10px 2px rgba(127, 17, 224, .4),
    -14px 0px 3px rgba(127, 17, 224, .3),
    -10px -10px 3px rgba(127, 17, 224, .2);

  transform-origin: 50%;
  animation: load 0.5s steps(8, end) infinite;
}

@keyframes load {
  0% { transform: rotate(0); }
  100% { transform: rotate(360deg); }
}
</style>